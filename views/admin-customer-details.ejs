<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
        }

        /* Status badge styles */
        .status-badge {
            display: inline-block;
            padding: 0.25em 0.5em;
            border-radius: 9999px;
            font-size: 0.875rem;
            font-weight: 500;
            border: 1px solid;
        }

        /* Specific styles for status */
        .status-completed {
            background-color: rgba(128, 128, 128, 0.1); /* Transparent gray */
            color: gray;
            border-color: gray;
        }

        .status-scheduled {
            background-color: rgba(56, 161, 105, 0.1); /* Transparent green */
            color: #38a169;
            border-color: #38a169;
        }

        .status-canceled {
            background-color: rgba(229, 62, 62, 0.1); /* Transparent red */
            color: #e53e3e;
            border-color: #e53e3e;
        }

        /* Edit and Delete button styles */
        .action-link {
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .action-link.edit {
            color: #4a90e2;
            border: 1px solid #4a90e2;
        }

        .action-link.delete {
            color: #e53e3e;
            border: 1px solid #e53e3e;
        }

        .action-link.edit:hover {
            background-color: #4a90e2;
            color: white;
        }

        .action-link.delete:hover {
            background-color: #e53e3e;
            color: white;
        }
    </style>
</head>
<body class="bg-gray-100">

    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold text-center mb-6">Customer List</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white shadow-md rounded-lg">
                <thead>
                    <tr class="bg-gray-200">
                        <th class="py-3 px-6 text-left font-semibold">Name</th>
                        <th class="py-3 px-6 text-left font-semibold">Email</th>
                        <th class="py-3 px-6 text-left font-semibold">Phone</th>
                        <th class="py-3 px-6 text-left font-semibold">Address</th>
                        <th class="py-3 px-6 text-left font-semibold">Motorcycle</th>
                        <th class="py-3 px-6 text-left font-semibold">Type</th>
                        <th class="py-3 px-6 text-left font-semibold">Plate Number</th>
                        <th class="py-3 px-6 text-center font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% customers.forEach(el => { %>
                        <tr class="border-t">
                            <td class="py-3 px-6"><%= el.name %></td>
                            <td class="py-3 px-6"><%= el.email %></td>
                            <td class="py-3 px-6"><%= el.phone %></td>
                            <td class="py-3 px-6"><%= el.address %></td>
                            <td class="py-3 px-6"><%= el.Motorcycle.brand %></td>
                            <td class="py-3 px-6"><%= el.Motorcycle.type %></td>
                            <td class="py-3 px-6"><%= el.Motorcycle.licensePlate %></td>
                            <td class="py-3 px-6 text-center">
                                <a href="/admin/appointments/<%= el.id %>/status">
                                    <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Details</button>
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
