<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Motorcycle Details</title>
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Import Poppins Font -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-100">

    <div class="container mx-auto py-12 px-4">
        <h1 class="text-3xl font-bold text-center mb-6">Your Motorcycles</h1>

        <% if (hasMotorcycle) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% motorcycles.forEach(motorcycle => { %>
                    <div class="bg-white p-6 rounded-lg shadow-md">
                        <h2 class="text-xl font-semibold mb-2"><%= motorcycle.brand %> - <%= motorcycle.type %></h2>
                        <p><strong>Year:</strong> <%= motorcycle.year %></p>
                        <p><strong>License Plate:</strong> <%= motorcycle.licensePlate %></p>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center mt-6">
                <p>You don't have any motorcycles yet.</p>
                <a href="/motorcycle/add"
                    class="inline-block mt-4 bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700">Add
                    Motorcycle</a>
            </div>
        <% } %>
    </div>

</body>

</html>
